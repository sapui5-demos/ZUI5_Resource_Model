<mvc:View xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.commons.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.ui.commons"
	controllerName="sap.training.view.LocaleSwitcher"
	xmlns:html="http://www.w3.org/1999/xhtml">
    
    <l:MatrixLayout>
	    <l:MatrixLayoutRow>
	        <l:MatrixLayoutCell>
	            <Image id="de" src="../img/Germany.png" press="setLocale"/>
                <Image id="en" src="../img/United-States.png" press="setLocale"/>
                <Image id="fr" src="../img/France.png" press="setLocale"/>
    	    </l:MatrixLayoutCell>
    	</l:MatrixLayoutRow>
        <l:MatrixLayoutRow>
            <l:MatrixLayoutCell>
                 <TextView text="{i18n>mainText}"/>
            </l:MatrixLayoutCell>
        </l:MatrixLayoutRow>
    </l:MatrixLayout>
</mvc:View>
